{% extends 'layout-admin.html.twig' %}

{% block title %}Locavor - Admin inscription {% endblock %}

{% block content %}

{% if is_granted('ROLE_SUPER_ADMIN') %}

<main class="container mt-5">
<section class="row py-md-5">
<div class="col-md-8 m-auto">
    <h1>Inscription d'un nouveau compte administrateur</h1>

    <p class="mb-md-5 mt-md-3">Ajoutez un nouveau compte administrateur en remplissant les informations ci-dessous, attention cet utilisateur pourra effectuer des modifications importantes pour le site.</p>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
</section>
</main>
{% else %}
<h1> Ce compte ne peux pas accéder à cette page, veuilliez consulter le compte d'administration principal.</h1>
{% endif %}
{% endblock %}
