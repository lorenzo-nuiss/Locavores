<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>

		<title>
			{% block title %}
			Espace Agriculteur
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"/>
			<link rel="stylesheet" href="{{ asset('css/sass/style.css') }}">

		{% endblock %}
		<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/images/logo-locavor-miniature.png') }}">

		{% block style %}
		{% endblock %}
	</head>


	<body>
		<div class="wrapper d-flex user">
			<nav class="d-flex flex-column flex-shrink-0 sidebar d-none d-lg-block" id="sidebar">
					<div class="contain-logo">
				<a href="{{ path('agriculteur_index') }}" class="pt-3 pb-3 link-dark text-decoration-none logo-container" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
						<img src="{{ asset('/images/logo-locavor-miniature.png') }}" class="logo" alt="logo les locavores">

					<span class="name-site">Locavores
					</span>
				</a>
					</div>
				<ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
					<li class="nav-item">
						<a href="{{ path('agriculteur_index') }}" class="py-2 nav-link
					{{ app.request.attributes.get('_route') == 'agriculteur_index' ? 'active' : '' }}
						">
							<i class="bi bi-house-fill"></i>
							<span class="menu-text">Accueil</span>
						</a>
					</li>
					<li>
						{% block navbarPageStore %}
						<a href="{{ path('agriculteur_profil') }}" class="nav-link py-2 border-top
					{{ app.request.attributes.get('_route') == 'agriculteur_index' ? '' : 'active' }}

						">
						{% endblock %}
							<i class="bi bi-basket-fill"></i>
							<span class="menu-text">Magasin</span>
						</a>
					</li>
					{# <li>
						<a href="#" class="nav-link py-2 border-top">
							<i class="bi bi-person-fill"></i>
							<span class="menu-text">Profil</span>
						</a>
					</li> #}

					<li>
					{% block navbarPageContact %}

						<a href="{{ path('contact') }}" class="nav-link py-2 border-top">
						{% endblock %}

							<i class="bi bi-telephone-fill"></i>
							<span class="menu-text">Contact</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_logout') }}" class="nav-link py-2 border-top">
							<i class="bi bi-door-open-fill"></i>
							<span class="menu-text">Déconnexion</span>
						</a>
					</li>
				</ul>
			</nav>




			<header class="d-lg-none">
				<nav class="navbar navbar-expand-lg navbar-light" id="navbar">
					<div class="container-fluid p-1">
						<a class="navbar-brand" href="{{ path('home')}}">
						<img src="{{ asset('/images/logo-les-locavores.svg') }}" class="brand-logo" alt="logo les locavores">
						</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarNav">
							<ul class="navbar-nav ms-lg-3">
								<li class="nav-item">
									<a class="nav-link" href="{{ path('agriculteur_index') }}">Accueil</a>
								</li>
									<a class="nav-link" href="{{ path('agriculteur_profil') }}">Magasin</a>
								</li>

								<li class="nav-item">
									<a class="nav-link" href="{{ path('contact')}}">Contact</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</header>


			<div class="container-fluid ps-lg-5 pe-md-0">
            {% block body %}
				<section class="bgimage banner">
